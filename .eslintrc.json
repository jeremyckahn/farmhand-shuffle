{
  "extends": [
    "react-app",
    "plugin:storybook/recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "import/order": [
      "error",
      {
        "newlines-between": "always-and-inside-groups"
      }
    ],
    "react/react-in-jsx-scope": "off",
    "react/jsx-curly-brace-presence": ["error", { "props": "never" }],
    "object-shorthand": "error"
  },
  "plugins": ["react"],
  "ignorePatterns": ["dist"]
}
